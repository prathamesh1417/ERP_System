@model IEnumerable<ERPSystem.Models.HR.Employee>
@{
    ViewData["Title"] = "Employee List";
}

<h2>Employees</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Employee</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Position)</th>
            <th>@Html.DisplayNameFor(model => model.First().HireDate)</th>
            <th>Years of Service</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.FullName</td>
                <td>@emp.Position</td>
                <td>@emp.HireDate.ToShortDateString()</td>
                <td>@emp.YearsOfService</td>
                <td>
                    <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
