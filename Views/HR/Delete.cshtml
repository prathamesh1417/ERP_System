@model ERPSystem.Models.HR.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <h4>@Model.FullName</h4>
    <dl class="row">
        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>
        <dt class="col-sm-2">Hire Date</dt>
        <dd class="col-sm-10">@Model.HireDate.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
