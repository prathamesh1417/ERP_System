<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERP System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /* Custom styles for dashboard layout */
        body {
            padding-top: 56px;
        }

        .sidebar {
            position: fixed;
            top: 56px;
            bottom: 0;
            left: 0;
            width: 250px;
            background-color: #f8f9fa;
            overflow-y: auto;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .nav-link.active {
            font-weight: bold;
            background-color: #e9ecef;
        }
    </style>
</head>
<body>
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">ERP Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Optional top navbar items -->
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Register">User Registration</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Login">User Login</a>
            </li>
            <li class="nav-item">
                <!-- If you choose to manage products (as part of inventory), point to the Product controller -->
                <a class="nav-link" href="/Product/Index">Products</a>
            </li>
            <li class="nav-item">
                <!-- Alternatively, if you separate inventory logic -->
                <!-- <a class="nav-link" asp-controller="Inventory" asp-action="Index">Inventory</a> -->
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/HR/Index" >Human Resources</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Finance" asp-action="Index">Finance &amp; Accounting</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="PurchaseOrder" asp-action="Index">Procurement</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Reporting" asp-action="Index">Reporting &amp; Analytics</a>
            </li>
        </ul>
    </div>

    <!-- Main Content Area -->
    <div class="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Enhance active link detection: mark a link active if the current path starts with its href value.
        (function () {
            const currentPath = window.location.pathname.toLowerCase();
            document.querySelectorAll('.nav-link').forEach(link => {
                let linkPath = link.getAttribute('href').toLowerCase();
                // Check if currentPath starts with the link's href
                if(currentPath.startsWith(linkPath)) {
                    link.classList.add('active');
                }
            });
        })();
    </script>
</body>
</html>
